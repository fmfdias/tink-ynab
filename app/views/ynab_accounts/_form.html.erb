<%= form_with(model: [ynab_account.ynab_budget, ynab_account], local: true) do |form| %>
  <% if ynab_account.errors.any? %>
    <div class="row">
      <div class="col" id="error_explanation">
        <h3><%= pluralize(ynab_account.errors.count, "error") %> prohibited this ynab_account from being saved:</h3>

        <ul>
          <% ynab_account.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= form.label :external_id %>
      <%= form.text_field :external_id, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= form.label :account_type %>
      <%= form.text_field :account_type, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= form.label :budget %>
      <%= form.select :ynab_budget_id,
              YnabBudget.all.collect { |p| [ p.name, p.id ] },
              { include_blank: false },
              { class: "form-control" } %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col actions">
      <%= form.submit nil, data: { disable_with: false }, type: "submit", class: 'btn btn-primary' %>
      <%= link_to 'Back', ynab_budget_ynab_accounts_path(ynab_account.ynab_budget), type: "button", class: 'btn btn-secondary' %>
    </div>
  </div>
<% end %>
