<div class="container">
  <%= form_for @session, url: send(Passwordless.mounted_as).sign_in_path do |f| %>
    <% email_field_name = :"passwordless[#{@email_field}]" %>
    <div class="row">
      <div class="col">
        <%= label_tag :email_field_name, 'Email' %>
        <%= text_field_tag email_field_name, params.fetch(email_field_name, nil), class: "form-control" %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col actions">
        <%= f.submit I18n.t('passwordless.sessions.new.submit'), class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>